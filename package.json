{
    "private": true,
    "scripts": {
        "eslint": "eslint ./packages --cache --fix --resolve-plugins-relative-to .",
        "bootstrap": "create-scandipwa-app",
        "postinstall": "lerna bootstrap",
        "clean": "lerna clean --yes",
        "compile:lockfile": "node tasks/compile-lockfile.js"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.10.0",
        "fs-extra": "^9.0.1",
        "husky": "^4.3.0",
        "lerna": "^3.22.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run eslint"
        }
    },
    "eslintConfig": {
        "extends": "@scandipwa",
        "ignorePatterns": [
            "packages/craco/**",
            "packages/scandipwa/**",
            "packages/eslint-plugin-scandipwa-guidelines/**",
            "packages/scandipwa-vscode/**"
        ],
        "rules": {
            "no-magic-numbers": "off",
            "max-lines": "off",
            "import/no-dynamic-require": "off",
            "fp/no-let": "off",
            "global-require": "off",
            "max-len": [
                "error",
                {
                    "code": 150,
                    "ignorePattern": "logger."
                }
            ]
        }
    },
    "workspaces": [
        "packages/*"
    ]
}
